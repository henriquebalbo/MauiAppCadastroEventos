<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoEvento"
             Title="Resumo do Evento">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="{Binding Nome, StringFormat='Evento: {0}'}" FontSize="20" FontAttributes="Bold" />
        <Label Text="{Binding Local, StringFormat='Local: {0}'}" />
        <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DataTermino, StringFormat='Término: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding Duracao, StringFormat='Duração: {0} dias'}" />
        <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" />
        <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: {0:C}'}" />
        <Label Text="{Binding CustoTotal, StringFormat='Custo Total: {0:C}'}"
               FontSize="18" TextColor="DarkRed" FontAttributes="Bold"/>

    </VerticalStackLayout>
</ContentPage>
